#!/bin/bash -l

set -euo pipefail

# ==== ONLY EDIT WITHIN THIS BLOCK =====

export DISPLAY=":1.0"

APPLICATIONS_DIR="${HOME}/.local/share/applications"

DESKTOP_DIR="${HOME}/Desktop"
mkdir -p "${APPLICATIONS_DIR}"
mkdir -p "${DESKTOP_DIR}"
update-desktop-database "${APPLICATIONS_DIR}"

cp *.desktop $HOME/Desktop/

# ==== ONLY EDIT WITHIN THIS BLOCK =====

exec "$@"
